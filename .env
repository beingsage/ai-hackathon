# Required
OPENAI_API_KEY=
# Optional overrides
OPENAI_CHAT_MODEL=gpt-5-nano
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
MAX_CHAT_TOKENS=256
RAG_TOP_K=3

# Vector store
# Set to "faiss" to use FAISS via LangChain (requires: npm install faiss-node)
VECTOR_STORE=memory
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
EMBEDDINGS_ENABLED=true
EMBEDDINGS_FALLBACK=true

# Speech toggles (set to true only when needed)
ENABLE_STT=true
ENABLE_TTS=true
NEXT_PUBLIC_ENABLE_STT=true
NEXT_PUBLIC_ENABLE_TTS=true

# Safety limits (tune as needed)
MAX_UPLOAD_MB=5
MAX_TEXT_CHARS=500000
MAX_TOTAL_CHUNKS=5000
MAX_TOTAL_CHARS=2000000
MAX_AUDIO_MB=10


NEXT_PUBLIC_DISABLE_NEXT_SERVER=true